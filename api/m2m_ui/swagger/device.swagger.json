        },
        "organizationName": {
          "type": "string",
          "description": "Organization name."
        },
        "isAdmin": {
          "type": "boolean",
          "format": "boolean",
          "description": "User is admin within the context of this organization."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Created at timestamp."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp."
        }
