              "$ref": "#/definitions/runtimeError"
            }
          }
        },
        "parameters": [
          {
            "name": "orgId",
            "description": "organization id. If specified return details for the given organization and the council it chairs.",
            "in": "query",
            "required": false,
            "type": "string",
            "format": "int64"
          }
        ],
        "tags": [
          "DHXServcie"
        ]
      }
    },
    "/api/dhx-mining/list-councils": {
