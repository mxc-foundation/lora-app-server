              "$ref": "#/definitions/runtimeError"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/restfulDHXBondRequest"
            }
          }
        ],
        "tags": [
          "DHXServcie"
        ]
      }
    },
