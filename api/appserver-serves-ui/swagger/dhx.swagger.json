        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/appserver_serves_uiDHXCreateStakeRequest"
            }
          }
        ],
        "tags": [
          "DHXServcie"
        ]
      }
    },
