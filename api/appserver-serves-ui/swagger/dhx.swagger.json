      "post": {
        "summary": "Request to create a new council",
        "operationId": "DHXCreateCouncil",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/appserver_serves_uiDHXCreateCouncilResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/runtimeError"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/appserver_serves_uiDHXCreateCouncilRequest"
            }
          }
        ],
        "tags": [
          "DHXServcie"
        ]
      }
    },
    "/api/dhx-mining/create-stake": {
      "post": {
        "summary": "Request to lockdrop for DHX pre-mining",
        "operationId": "DHXCreateStake",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/appserver_serves_uiDHXCreateStakeResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/runtimeError"
            }
