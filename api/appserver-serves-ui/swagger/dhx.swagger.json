  "definitions": {
    "appserver_serves_uiCouncil": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "int64",
          "title": "numerical council ID"
        },
        "chairOrgId": {
          "type": "string",
          "format": "int64",
          "title": "ID of the organization that chaires the council"
        },
        "name": {
          "type": "string",
          "title": "name of the council unique on this supernode"
        },
        "lastPaidDate": {
          "type": "string",
          "format": "date-time",
          "title": "the date when council was last paid revenues"
        },
        "lastMpower": {
          "type": "string",
          "title": "councils mpower when it was paid last time"
        },
        "lastDhxRevenue": {
          "type": "string",
          "title": "councils DHX revenue when it was paid last time"
        }
      },
      "title": "Information about the council"
    },
    "appserver_serves_uiDHXCreateCouncilRequest": {
      "type": "object",
      "properties": {
        "organizationId": {
          "type": "string",
          "format": "int64",
          "title": "organization that will chair the council"
        },
        "amount": {
          "type": "string",
          "title": "amount that shall be staked then the council is created"
        },
        "currency": {
          "type": "string"
        },
        "lockMonths": {
          "type": "string",
          "format": "int64",
          "title": "for how many months the stake should be locked"
        },
        "boost": {
          "type": "string",
          "title": "the boost that user expects"
        },
        "name": {
          "type": "string",
          "title": "the name of the council"
        }
      }
    },
    "appserver_serves_uiDHXCreateCouncilResponse": {
      "type": "object",
      "properties": {
        "councilId": {
          "type": "string",
          "format": "int64",
          "title": "id of the council create request in the table"
        },
        "stakeId": {
          "type": "string",
          "format": "int64",
          "title": "id of the stake that was created while creating the council"
        }
      }
    },
    "appserver_serves_uiDHXCreateStakeRequest": {
      "type": "object",
      "properties": {
        "councilId": {
          "type": "string",
          "format": "int64",
          "title": "in which council to create the lockdrop"
        },
        "amount": {
          "type": "string"
        },
        "currency": {
          "type": "string"
        },
        "lockMonths": {
          "type": "string",
          "format": "int64",
          "title": "for how many months the stake should be locked"
        },
        "boost": {
          "type": "string",
          "title": "the boost that user expects"
        },
        "organizationId": {
          "type": "string",
          "format": "int64"
        }
      }
    },
    "appserver_serves_uiDHXCreateStakeResponse": {
      "type": "object",
      "properties": {
        "stakeId": {
          "type": "string",
          "format": "int64",
          "title": "ID of the created stake"
        }
      }
    },
    "appserver_serves_uiDHXGetLastMiningResponse": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date-time",
          "title": "the last date for which mining has been paid"
        },
        "miningPower": {
          "type": "string",
          "title": "the calculated mining power of the supernode for this day"
        },
        "dhxAmount": {
          "type": "string",
          "title": "the amount of DHX that supernode has received"
        }
      }
    },
    "appserver_serves_uiDHXListCouncilsResponse": {
      "type": "object",
      "properties": {
        "council": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/appserver_serves_uiCouncil"
