      "get": {
        "summary": "Return info about the last paid day of DHX mining",
        "operationId": "DHXGetLastMining",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/appserver_serves_uiDHXGetLastMiningResponse"
            }
